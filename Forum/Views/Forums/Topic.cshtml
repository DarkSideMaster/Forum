@model Forum.Models.ForumTopicModel

<h1>Добро пожаловать на форум посвященный языку @Model.Forum.Name </h1>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.Author
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="noPosts">
        <h3>
            Похоже, в этой теме @Model.Forum.Name  еще нет ответов.
            <br />
            Вы можете
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>начать обсуждение!</span>
            </a>
        </h3>
    </div>

}
@model Forum.Models.Posts.NewPostModel

<h1>Нове повідомлення  @Model.ForumName</h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <button type="submit" id="submitPostBtn" class="btn-info">Додати повідомлення</button>
    <input asp-for="ForumId" type="hidden" />
</form>

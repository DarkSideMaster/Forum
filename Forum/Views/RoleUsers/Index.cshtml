@model Forum.Models.User.ProfileListModel


<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">Перегляд ролей користувачів</div>
    </div>
    <div class="row" id="forumIndexContent">
        <table class="table table-hover" id="userIndexTable">
            <thead>
            <tr>
                <th>Ім'я користувача</th>
                <th>E-mail</th>
                <th>Адміністратор</th>
                <th>Модератор</th>
                <th>Супер модератор</th>
                <th>Доступні ролі</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var profile in Model.Profiles)
            {
                <tr class="userRow">
                    <td>
                            <b>@profile.UserName</b>
                    </td>
                    <td>
                        @profile.Email
                    </td>

                    <td>
                        @profile.IsAdmin.ToString()
                    </td>
                    <td>
                        @profile.IsModerator.ToString()
                    </td>
                    <td>
                        @profile.IsSuperModerator.ToString()
                    </td>
                    <td>
                        
                        <form asp-controller="RoleUsers" asp-action="AddRoleToUser" method="post">
                            
                            <select class="form-select" asp-items="Model.RolesSelectList" ></select>
                            <br/>
                            <button type="submit" class="btn btn-primary">Зберегти</button>
                        </form>

                        
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
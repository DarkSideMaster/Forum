@using Microsoft.AspNetCore.Identity
@model Forum.Models.User.ProfileModel

@inject UserManager<ApplicationUser> UserManager

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Профіль корустувача
        </div>
    </div>
    @if (User.IsInRole("Admin"))
    {
        //here moderator role or administrator or button
    }
    <div class="row userProfile ">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image:url(@Model.ProfileImageUrl)"></div>
            @if (User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                    <div id="upload">
                        <label class="btn btn-default btn-file">
                            Огляд <input type="file" style="display:none" name="file" />
                        </label>
                    </div>
                    <button type="submit" id="btn-profile" class="btn btn-secondary">Підтвердити</button>
                </form>
            }
        </div>
        <div class="col-md-8">
            <span id="userName"> @Model.UserName</span>
            @if (@Model.IsAdmin)
            {
                <span class="isAdmin">Адмінстратор</span>
            }
            <span id="userRating">Поточний рейтинг: @Model.UserRating</span>
            <span id="userEmailLabel">E-mail: @Model.Email</span>
            <span id="userCreateLabel">Приєднався: @Model.MemberSince</span>
        </div>
    </div>
</div>